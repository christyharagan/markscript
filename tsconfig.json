{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "declaration": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "noLib": false,
        "rootDir": ".",
        "sourceMap": true,
        "sourceRoot": ".",
        "target": "es5",
        "outDir": "./dist"
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "filesGlob": [
        "./lib/**/*.ts",
        "./test/**/*.ts",
        "./typings/**/*.d.ts",
        "./node_modules/*/*.d.ts",
        "./node_modules/typescript/bin/typescript.d.ts"
    ],
    "compileOnSave": true,
    "files": [
        "./lib/build.ts",
        "./lib/decorators.ts",
        "./lib/deployer.ts",
        "./lib/index.ts",
        "./lib/model.ts",
        "./lib/modelGenerator.ts",
        "./lib/modelVisitor.ts",
        "./lib/server/extension.ts",
        "./lib/server/utils.ts",
        "./typings/es6/es6.d.ts",
        "./typings/glob/glob.d.ts",
        "./typings/minimatch/minimatch.d.ts",
        "./typings/mocha/mocha.d.ts",
        "./typings/node/node.d.ts",
        "./typings/should-promised/should-promised.d.ts",
        "./typings/should/should.d.ts",
        "./typings/tsd.d.ts",
        "./node_modules/ml-admin/ml-admin.d.ts",
        "./node_modules/ml-typescript-definitions/client.d.ts",
        "./node_modules/ml-typescript-definitions/server.d.ts",
        "./node_modules/speckle/speckle.d.ts",
        "./node_modules/typescript-package/typescript-package.d.ts",
        "./node_modules/typescript-schema/typescript-schema.d.ts",
        "./node_modules/typescript/bin/typescript.d.ts"
    ]
}
