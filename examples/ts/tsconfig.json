{
    "compilerOptions": {
        "emitDecoratorMetadata": false,
        "declaration": false,
        "module": "commonjs",
        "noImplicitAny": false,
        "noLib": false,
        "rootDir": ".",
        "sourceMap": true,
        "sourceRoot": ".",
        "target": "es5",
        "outDir": "./dist",
        "moduleResolution": "node"
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "filesGlob": [
        "./markscriptfile.ts",
        "./lib/**/*.ts",
        "./typings/**/*.ts",
        "./node_modules/ml-typescript-definitions/*.d.ts"
    ],
    "files": [
        "./markscriptfile.ts",
        "./lib/sampleAlert.ts",
        "./lib/sampleDatabaseModel.ts",
        "./lib/sampleExtension.ts",
        "./lib/sampleModule.ts",
        "./lib/sampleTask.ts",
        "./typings/es6/es6.d.ts",
        "./typings/node/node.d.ts",
        "./typings/tsd.d.ts",
        "./node_modules/ml-typescript-definitions/client.d.ts",
        "./node_modules/ml-typescript-definitions/server.d.ts"
    ]
}
